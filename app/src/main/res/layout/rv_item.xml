<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/rv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rainy"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/rv_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/rv_avgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg: 23.3Â°C"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rv_maxWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max wind: 12.6kph"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rv_avgHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg humidity: 67.0%"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>